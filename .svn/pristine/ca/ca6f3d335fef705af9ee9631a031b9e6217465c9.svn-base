.campaign-card {
  background: #fff;
  border-radius: 12px;
  padding: 16px 20px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
  font-family: "Roboto", sans-serif;
  width: 100%;
  margin: 0 0 20px 0;

  .top-row {
    display: flex;
    align-items: flex-start; /* Aligns both titles at the top */

    .campaign-title {
      display: flex;
      align-items: center;
      gap: 16px;
      flex: 1;

      h3 {
        font-weight: 600;
        margin: 0;
      }

      .status-buttons {
        display: flex;
        gap: 8px;

        .active-btn {
          background-color: #1976d2;
        }
      }
    }

    .performance-title {
      font-size: 20px;
      font-weight: bold;
      margin: 0;
      flex: 1;
      padding-left: 40px; /* matches gap between columns */
      text-align: left;
    }
  }

  .campaign-content {
    display: flex;
    justify-content: space-between;
    gap: 40px;
    margin-top: 16px;

    .campaign-info,
    .campaign-metrics {
      display: flex;
      flex-direction: column;
      gap: 12px;
      flex: 1;
    }

    .info-item {
      display: flex;
      align-items: center;
      gap: 12px;
      background: #fff;
      border-radius: 8px;
      padding: 10px 12px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.08);
      border: 1px solid #eee;

      .icon {
        background-color: rgba(100, 149, 237, 0.2);
        color: #4a6ee0;
        padding: 8px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
      }

      .label {
        font-weight: 500;
        min-width: 110px;
      }

      .value {
        font-weight: 400;
        color: #555;
      }

      &.sales-item {
        gap: 8px;
        button {
          min-width: 50px;
          padding: 2px 8px;
        }
      }
    }

    .action-buttons {
      margin-top: 12px;
      display: flex;
      gap: 10px;

      .clone-btn {
        border-color: #7b7bff;
        color: #7b7bff;
      }

      .view-btn {
        background-color: #7b7bff;
        &:hover {
          background-color: #6b6be0;
        }
      }
    }
  }
}
